<h1>ShopCart</h1>

<h3>ORDERS OVERVIEW:</h3>
<table>
    <tr>
        <th>Product</th>
        <th>Price</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td> <%= Product.find(order[:product_id]).name %> (<%= Option.find(order[:option_id]).name %>)</td>
        <td> <%= Product.find(order[:product_id]).price  %> </td>
    </tr>
    <% end %>
    <tr>
        <td> <b>Total</b> </td>
        <td> <%= @total_sum %> </td>
    </tr>
</table>

