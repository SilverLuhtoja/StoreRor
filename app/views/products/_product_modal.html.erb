<%# originates from data: { turbo_frame: "modal"}, controller: productController#modal%>

<%= turbo_frame_tag :modal do %>
<div data-controller="modal">
    <div id="productModal" class="modal">
        <div class="modal-content">
            <div class="images">
                <img src="<%= asset_path('display_shop_item.jpg') %>" alt="<%= product.name %>">
            </div>
            <div class=info>
                <span class="close" data-action="click->modal#close">&times;</span>
                <h1><%= product.name %></h1>
                <h2>$ <%= product.id || product.id %></h2>
                <p><%= product.description || "Longer product description" %></p>


                <% if product.options.present? %>
                <% product.options.each do |option| %>
                <div class="flex">
                    <%= option.id %>
                    <%= option.name %>
                    <%= option.width %>
                    <%= option.height %>
                    <%= image_tag option.image if option.image.present? %>
                </div>
                <% end %>
                <% end %>

                <button class="addToCartBtn">Add To Cart</button>
            </div>
        </div>
    </div>
</div>
<% end %>